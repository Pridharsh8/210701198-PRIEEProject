<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.learn">
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/lg"
        tools:ignore="MissingConstraints" />

    <LinearLayout
        android:id="@+id/box"
        android:layout_width="359dp"
        android:layout_height="165dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="85dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/sq"
        app:layout_constraintBottom_toTopOf="@id/textView4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.511"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="154dp"
            android:layout_height="78dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="50dp"
            android:fontFamily="@font/r"
            android:text="Knowledge \n is power"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="180dp"
            android:layout_height="191dp"
            android:layout_marginTop="8dp"
            app:srcCompat="@drawable/books" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="133dp"
        android:layout_height="38dp"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_marginStart="40dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/a"
        android:text="Subjects"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/scrollView3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/box" />

    <ScrollView
        android:id="@+id/scrollView3"
        android:layout_width="350dp"
        android:layout_height="325dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView4">

        <GridLayout
            android:layout_width="350dp"
            android:layout_height="400dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:columnCount="2">

            <ImageButton
                android:id="@+id/bio"
                android:layout_width="153dp"
                android:layout_height="140dp"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:padding="0dp"
                android:scaleType="centerCrop"
                android:src="@drawable/sci" />

            <ImageButton
                android:layout_width="153dp"
                android:layout_height="140dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:padding="0dp"
                android:scaleType="centerCrop"
                android:src="@drawable/maths" />

            <ImageButton
                android:layout_width="153dp"
                android:layout_height="140dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:padding="0dp"
                android:scaleType="centerCrop"
                android:src="@drawable/cs" />
            <ImageButton
                android:layout_width="153dp"
                android:layout_height="140dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:padding="0dp"
                android:scaleType="centerCrop"
                android:src="@drawable/eng" />


        </GridLayout>

    </ScrollView>


    <GridLayout
        android:layout_width="420dp"
        android:layout_height="70dp"
        android:layout_marginTop="670dp"
        android:background="@drawable/sq"
        android:columnCount="2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/cou"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_marginStart="110dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/sq"
            android:scaleType="centerCrop"
            android:src="@drawable/course" />

        <ImageButton
            android:id="@+id/game"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_marginStart="100dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/sq"
            android:scaleType="centerCrop"
            android:src="@drawable/game" />

    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>